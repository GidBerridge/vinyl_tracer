      <div class="d-flex show-card row col-6 justify-content-center align-items-center m-3">
            <!-- Featured album card -->
        <div class="justify-content-center m-2">
          <div class="card-vinyl" style="width: 15rem; margin-top: 1rem;">
            <img src= <%= @album.artwork_url %> />
            <div class="card-vinyl-infos">
            <ul style="list-style: none; margin: 0; padding: 0;">
