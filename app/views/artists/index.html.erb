
<div class="container" style="width: 58rem;">
  <div class="d-flex justify-content-center">
    <h1 style="text-align:center; margin: 50px;"><%= @artist.artist_name%> Vinyl Discography</h1>
  </div>

<div class='ripple-background'>
  <div class='circle xxlarge shade1'></div>
  <div class='circle xlarge shade2'></div>
  <div class='circle large shade3'></div>
  <div class='circle mediun shade4'></div>
  <div class='circle small shade5'></div>
</div>

  <div class="flex-container">

    <% @artist.albums.each do |album| %>
      <div class="flex-item mb-4">
        <div class="card-vinyl">
          <img src= <%= album.artwork_url%> />
          <div class="card-vinyl-infos">
            <div style=" margin: 0; padding: 0;">
              <h2><%= link_to "#{album.album_name}", album_path(album) %></h2>
              <h3><%= album.artist.artist_name %></h3>
            </div>
            <div class="d-flex flex-column" style="margin:auto">
              <div>
                <p><%= album.year %></p>
              </div>
              <div>
                <% album.genre.each do |genre| %>
                <p><%= genre %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
  <br>
  <div style="margin-bottom: 50px;"><%= link_to 'Search again', root_path, class: "btn btn-primary ml-3" %></div>

<%= javascript_pack_tag 'index.js' %>
</div>


