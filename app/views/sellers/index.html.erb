<div class="container" style="width: 200rem;">
  <div class='ripple-background'>
  <div class='circle xxlarge shade1'></div>
  <div class='circle xlarge shade2'></div>
  <div class='circle large shade3'></div>
  <div class='circle mediun shade4'></div>
  <div class='circle small shade5'></div>
</div>

  <h1 id="vinyl-header">Album Vendors</h1>
  <h3 style="margin-top: 40px; text-align: center;">Browse independent stores here, or search for your nearest option</h3>
  <div class="d-flex justify-content-center">
    <form class="form-inline col-12 justify-content-center">
    <%= form_tag sellers_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control mr-3 w-25", id: "seller-search",
        placeholder: "enter your location"
      %>
      <%= submit_tag "Search", class: "btn btn-basic mt-4 mb-4" %>
    <% end %>
    </form>
  </div>

 <!--  <div class="d-flex justify-content-center"> -->
 <!-- </div> -->

  <div class="flex-container">

    <% @sellers.each do |seller| %>
      <div class="flex-item mb-4">
        <div class="card-seller" id="seller" >
          <img src= <%= seller.seller_logo %> style="object-fit: scale-down"/>
          <div class="card-vinyl-infos" style= "background-color: white; height: 250px;">
            <h2><%= link_to "#{seller.seller_name}", seller_path(seller) %></h2>
            <p><%= seller.location %></p>
            <p><%= link_to "View website", "#{seller.seller_url}", target: :blank %></p>

          </div>
        </div>
      </div>
    <% end %>

  </div>
<!--- map --->
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <br>

  <div class="d-flex justify-content-center"><%= link_to 'back to album search', albums_path, class: "btn btn-basic mb-5" %></div>

</div>
